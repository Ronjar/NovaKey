<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <viviano.cantu.novakey.view.MainView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/preview"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/preview">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <viviano.cantu.novakey.settings.widgets.pickers.ThemePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/themePicker"/>
                </viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Auto Color"
                        android:id="@+id/autoColor" />
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3D"
                        android:id="@+id/threeDee" />
                </LinearLayout>

                <viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <viviano.cantu.novakey.settings.widgets.pickers.ColorPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/primaryColor"/>
                </viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView>

                <viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <viviano.cantu.novakey.settings.widgets.pickers.ColorPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondaryColor"/>
                </viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView>

                <viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <viviano.cantu.novakey.settings.widgets.pickers.ColorPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ternaryColor"/>
                </viviano.cantu.novakey.settings.widgets.ObservableHorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"></RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/drop_shadow"
            android:layout_below="@id/preview"/>
    </RelativeLayout>

    <viviano.cantu.novakey.settings.widgets.pickers.ReleasePicker
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/releasePick"/>

</RelativeLayout>