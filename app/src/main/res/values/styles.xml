<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            BaseTheme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="colorAccent">#616161</item>
        <item name="colorPrimary">#616161</item>
        <item name="colorPrimaryDark">#616161</item>
        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="TutorialTheme" parent="AppTheme">
        <item name="colorAccent">#F0F0F0</item>
    </style>


</resources>
