    <PreferenceCategory android:title="Mechanics">
		<CheckBoxPreference
		    android:title="Quick Insert"
		    android:summary="Automatically insert the closing of ¿¡⌊⌈"
		    android:key="pref_quick_insert"
		    android:defaultValue="true"
		    />
